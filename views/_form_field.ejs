<div class="form-group mt-4 ml-4 mr-4">
    <label style="font-size:35px;">Title</label>
    <input name="title" type="text" class="form-control" value="<%=article.title %>" required>
</div>
<div class="form-group mt-4 ml-4 mr-4">
    <label style="font-size:35px;">Description</label>
    <input name="description" type="text" class="form-control" value="<%=article.description%>" required>
</div>
<div class="mb-3 mt-4 ml-4 mr-4">
      <label style="font-size:35px;">Content</label>
      <textarea name="markdown" class="form-control" rows="10" cols="50" required><%=article.markdown%></textarea>
</div>
<div>
    <a href='/'><button class="btn btn-outline-danger my-2 my-sm-0 ml-4" >cancel</button></a>
    <button class="btn btn-outline-success my-2 my-sm-0 ml-2" type="submit">save</button>
</div>
